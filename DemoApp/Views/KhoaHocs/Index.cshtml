@model IEnumerable<DemoApp.Models.KhoaHoc>

@{
    Layout = "~/Views/Shared/qlkhLayout.cshtml";
    ViewData["Title"] = "Quản lý khóa học";
}

<div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
    <div>
        <h1 class="text-3xl font-bold text-gray-800">Quản lý khóa học</h1>
        <p class="text-gray-600 mt-1">Xem, thêm, chỉnh sửa và xóa các khóa học trong hệ thống.</p>
    </div>
    <button class="mt-4 md:mt-0 bg-blue-600 text-white font-bold py-2 px-4 rounded-lg flex items-center space-x-2 hover:bg-blue-700 transition-colors">
        <a asp-controller="KhoaHocs" asp-action="Create">
            <span class="material-symbols-outlined">add</span>
            <span>Thêm khóa học mới</span>
        </a>
    </button>
</div>

<div class="bg-white rounded-lg shadow-md overflow-x-auto">
    <table class="w-full text-sm text-left text-gray-500">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
            <tr>
                <th class="px-6 py-3" scope="col">Tên khóa học</th>
                <th class="px-6 py-3" scope="col">Mô tả</th>
                <th class="px-6 py-3 text-center" scope="col">ID người dùng</th>
                <th class="px-6 py-3 text-center" scope="col">Ngày tạo</th>
                <th class="px-6 py-3" scope="col">Trạng thái</th>
                <th class="px-6 py-3 text-right" scope="col">Hành động</th>
            </tr>
        </thead>
        <tbody>
            <tr class="bg-white border-b hover:bg-gray-50">
                <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">Lập trình web nâng cao</td>
                <td class="px-6 py-4">Khóa học về các công nghệ frontend và backend hiện đại.</td>
                <td class="px-6 py-4 text-center">35</td>
                <td class="px-6 py-4 text-center">150</td>
                <td class="px-6 py-4">
                    <span class="bg-green-100 text-green-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-full">Đang hoạt động</span>
                </td>
                <td class="px-6 py-4 text-right">
                    <div class="flex items-center justify-end space-x-2">
                        <button class="p-2 text-blue-600 hover:bg-blue-100 rounded-full">
                            <a asp-controller="KhoaHocs" asp-action="Edit"><span class="material-symbols-outlined text-base">edit</span></a>
                        </button>
                        <button class="p-2 text-red-600 hover:bg-red-100 rounded-full">
                            <a asp-controller="KhoaHocs" asp-action="Delete"><span class="material-symbols-outlined text-base">delete</span></a>
                        </button>
                    </div>
                </td>
            </tr>
            <tr class="bg-white border-b hover:bg-gray-50">
                <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">Phân tích dữ liệu với Python</td>
                <td class="px-6 py-4">Học cách sử dụng Python cho việc phân tích và trực quan hóa dữ liệu.</td>
                <td class="px-6 py-4 text-center">42</td>
                <td class="px-6 py-4 text-center">210</td>
                <td class="px-6 py-4">
                    <span class="bg-green-100 text-green-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-full">Đang hoạt động</span>
                </td>
                <td class="px-6 py-4 text-right">
                    <div class="flex items-center justify-end space-x-2">
                        <button class="p-2 text-blue-600 hover:bg-blue-100 rounded-full">
                            <a asp-controller="KhoaHocs" asp-action="Edit"><span class="material-symbols-outlined text-base">edit</span></a>
                        </button>
                        <button class="p-2 text-red-600 hover:bg-red-100 rounded-full">
