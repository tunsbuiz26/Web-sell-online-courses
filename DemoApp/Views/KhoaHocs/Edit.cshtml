@model DemoApp.Models.KhoaHoc

@{
    Layout = "~/Views/Shared/qlkhLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa khóa học";
}

<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Chỉnh sửa khóa học</h1>
    <p class="text-gray-600 mt-1">Cập nhật thông tin chi tiết của khóa học trong biểu mẫu dưới đây.</p>
</div>

<div class="bg-white rounded-lg shadow-md">
    <form asp-controller="KhoaHocs" asp-action="Edit" asp-route-id="@Model.KhoaHocID" method="post">

        <input type="hidden" asp-for="KhoaHocID" />

        <div class="p-6 md:p-8 space-y-6">

            <div>
                <label asp-for="TenKhoaHoc" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <input asp-for="TenKhoaHoc" class="w-full border-gray-300 rounded-lg shadow-sm focus:border-blue-500 focus:ring-blue-500" placeholder="Ví dụ: Lập trình web nâng cao">
            </div>

            <div>
                <label asp-for="MoTa" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <textarea asp-for="MoTa" rows="4" class="w-full border-gray-300 rounded-lg shadow-sm focus:border-blue-500 focus:ring-blue-500" placeholder="Nhập mô tả chi tiết"></textarea>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="TenKhoaHoc" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="TenKhoaHoc" type="number" class="w-full border-gray-300 rounded-lg shadow-sm focus:border-blue-500 focus:ring-blue-500" placeholder="Ví dụ: 35">
                </div>
                <div>
                    <label asp-for="UserId" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="UserId" type="number" class="w-full border-gray-300 rounded-lg shadow-sm focus:border-blue-500 focus:ring-blue-500" placeholder="Ví dụ: 1500000">
                </div>
            </div>

            <div>
                <label asp-for="TrangThai" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <select asp-for="TrangThai" class="w-full border-gray-300 rounded-lg shadow-sm focus:border-blue-500 focus:ring-blue-500">
                    <option value="Sắp khai giảng">Sắp khai giảng</option>
                    <option value="Đang hoạt động">Đang hoạt động</option>
                    <option value="Đã kết thúc">Đã kết thúc</option>
                </select>
            </div>

        </div> <div class="flex items-center justify-end gap-4 px-6 py-4 bg-gray-50 border-t border-gray-200 rounded-b-lg">

            <a asp-action="Index" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50">
                Hủy
            </a>

            <button type="submit" class="bg-blue-600 text-white font-bold py-2 px-4 rounded-lg flex items-center space-x-2 hover:bg-blue-700 transition-colors">
                <a asp-controller="KhoaHocs" asp-action="index">Lưu thay đổi</a>
            </button>

        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
