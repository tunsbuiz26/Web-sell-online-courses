    @model List<DemoApp.Models.KhoaHoc>
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
        ViewData["Title"] = "Danh Sách Khóa Học";
    }

    <link rel="stylesheet" href="~/css/dskh.css" asp-append-version="true" />

    <main class="container mx-auto px-4 py-8">
        <div class="page-header">
            <h1 class="page-title">Danh Sách Khóa Học</h1>
            <p class="page-subtitle">Khám phá các khóa học chất lượng với đội ngũ giảng viên giàu kinh nghiệm</p>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="courses-horizontal-container">
                @foreach (var khoaHoc in Model)
                {
                    <div class="course-card-horizontal">
                        <div class="course-header-horizontal">
                            <a asp-action="ChiTietKhoaHoc" asp-controller="KhoaHocs" asp-route-id="@khoaHoc.Id">
                                <img src="/images/@khoaHoc.AnhBia" alt="@khoaHoc.TenKhoaHoc" class="course-image" />
                            </a>
                        </div>
                        <div class="course-content-horizontal">
                            <h2 class="course-main-title">@khoaHoc.TenKhoaHoc.ToUpper()</h2>
                            <span class="course-subtitle">@khoaHoc.MoTaNgan</span>

                            <!-- ... checklist giữ nguyên ... -->

                            <div class="course-divider"></div>

                            <div class="course-instructor">Đội Ngũ 28Tech</div>

                            <div class="course-price-container">
                                <div class="course-price-current">FREE</div>
                            </div>

                            @* HỌC NGAY → ADD VÀO "KHÓA HỌC CỦA TÔI" *@
                            <form asp-controller="MyCourses"
                                  asp-action="Enroll"
                                  method="post"
                                  class="course-enroll-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@khoaHoc.Id" />
                                <button type="submit" class="btn-enroll">
                                    Học ngay
                                </button>
                            </form>
                        </div>
                    </div>
                }

            </div>
        }
        else
        {
            <div class="text-center py-12">
                <p class="text-gray-500 text-lg">Chưa có khóa học nào.</p>
            </div>
        }
    </main>
