@model DemoApp.Models.KhoaHoc
@{
    ViewData["Title"] = "Thêm khóa học";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">Thêm khóa học</h1>

<form asp-action="CreateCourse" asp-controller="Admin" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="MaKhoaHoc" class="form-label"></label>
        <input asp-for="MaKhoaHoc" class="form-control" />
        <span asp-validation-for="MaKhoaHoc" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TenKhoaHoc" class="form-label"></label>
        <input asp-for="TenKhoaHoc" class="form-control" />
        <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MoTaNgan" class="form-label"></label>
        <textarea asp-for="MoTaNgan" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Ảnh bìa</label>

        <!-- Input upload -->
        <input type="file" name="AnhBiaFile" id="AnhBiaFile" class="form-control" accept="image/*" />

        <!-- Preview ảnh -->
        <div class="mt-3">
            <img id="previewImage"
                 src="#"
                 style="max-width: 250px; border-radius: 10px; display:none; box-shadow:0 5px 20px rgba(0,0,0,0.15);" />
        </div>
    </div>

    <!-- Hidden để lưu đường dẫn ảnh -->
    <input type="hidden" asp-for="AnhBia" />

    <div class="mb-3">
        <label class="form-label">Danh mục</label>
        <select asp-for="DanhMucId" class="form-select"
                asp-items="@(new SelectList((IEnumerable<DemoApp.Models.DanhMuc>)ViewBag.DanhMucList, "Id", "TenDanhMuc"))">
            <option value="">-- Chọn danh mục --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="CapDo" class="form-label"></label>
        <select asp-for="CapDo" class="form-select">
            <option value="CoBan">Cơ bản</option>
            <option value="TrungCap">Trung cấp</option>
            <option value="NangCao">Nâng cao</option>
        </select>
    </div>

    <input type="hidden" asp-for="GiaTien" value="0" />

    <div class="mb-3">
        <label asp-for="TrangThai" class="form-label"></label>
        <select asp-for="TrangThai" class="form-select">
            <option value="BanNhap">Bản nháp</option>
            <option value="HoatDong">Hoạt động</option>
            <option value="DaAn">Đã ẩn</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    <a asp-action="Courses" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("AnhBiaFile").addEventListener("change", function (e) {
            const file = e.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function (event) {
                const img = document.getElementById("previewImage");
                img.src = event.target.result;
                img.style.display = "block";
            };
            reader.readAsDataURL(file);
        });
    </script>
}
