
@model DemoApp.ViewModels.AdminDashboardViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Trang chủ";
}

<section class="welcome-header">
    <h1>Chào mừng, Quản trị viên!</h1>
    <p>Đây là tổng quan nhanh về hệ thống quản lý khóa học của bạn.</p>
</section>

<section class="stats-container">
    <div class="stat-card courses">
        <div class="icon-container">
            <i class="fas fa-graduation-cap"></i>
        </div>
        <div class="card-content">
            <span>Tổng số khóa học</span>
            <div class="number">42</div>
        </div>
    </div>
    <div class="stat-card students">
        <div class="icon-container">
            <i class="fas fa-users"></i>
        </div>
        <div class="card-content">
            <span>Tổng số sinh viên</span>
            <div class="number">1,250</div>
        </div>
    </div>
    <div class="stat-card lessons">
        <div class="icon-container">
            <i class="fas fa-book-open"></i>
        </div>
        <div class="card-content">
            <span>Tổng số bài học</span>
            <div class="number">380</div>
        </div>
    </div>
    <div class="stat-card tasks">
        <div class="icon-container">
            <i class="fas fa-clipboard-list"></i>
        </div>
        <div class="card-content">
            <span>Nhiệm vụ đang chờ</span>
            <div class="number">5</div>
        </div>
    </div>
</section>

<section class="quick-access">
    <h2>Truy cập nhanh</h2>
    <div class="quick-access-grid">
        <div class="access-card">
            <div class="icon-container">
                <i class="fas fa-plus"></i>
            </div>
            <div class="card-content">
                <h3>Tạo khóa học mới</h3>
                <p>Bắt đầu xây dựng một khóa học mới.</p>
            </div>
        </div>
        <div class="access-card">
            <div class="icon-container">
                <i class="fas fa-user-plus"></i>
            </div>
            <div class="card-content">
                <h3>Ghi danh sinh viên</h3>
                <p>Thêm sinh viên vào một khóa học.</p>
            </div>
        </div>
        <div class="access-card">
            <div class="icon-container">
                <i class="fas fa-chart-bar"></i>
            </div>
            <div class="card-content">
                <h3>Xem báo cáo</h3>
                <p>Phân tích thống kê học tập và điểm danh.</p>
            </div>
        </div>
        <div class="access-card">
            <div class="icon-container">
                <i class="fas fa-edit"></i>
            </div>
            <div class="card-content">
                <h3>Quản lý bài học</h3>
                <p>Chỉnh sửa hoặc thêm bài học vào các khóa học.</p>
            </div>
        </div>
        <div class="access-card">
            <div class="icon-container">
                <i class="fas fa-check-square"></i>
            </div>
            <div class="card-content">
                <h3>Kiểm tra điểm danh</h3>
                <p>Xem và quản lý hồ sơ điểm danh.</p>
            </div>
        </div>
        <div class="access-card">
            <div class="icon-container">
                <i class="fas fa-cog"></i>
            </div>
            <div class="card-content">
                <h3>Cài đặt hệ thống</h3>
                <p>Cấu hình cài đặt chung cho trang web.</p>
            </div>
        </div>
    </div>
</section>