@model IEnumerable<DemoApp.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-dashboard.css" />
}

<div class="admin-wrapper">
    @* ==== COPY PHẦN ADMIN HEADER + SIDEBAR TỪ TRANG Dashboard.cshtml VÀO ĐÂY ====
       - Nhớ sửa class "active" ở menu:
         + /admin/dashboard     -> nav-item
         + /admin/quanliusers   -> nav-item active
    *@

    <!-- MAIN CONTENT: QUẢN LÝ NGƯỜI DÙNG -->
    <main class="admin-main" id="adminMain">
        <div class="admin-content">

            <div class="admin-page-header">
                <div>
                    <h2 class="admin-page-title">Quản lý người dùng</h2>
                    <p class="admin-page-subtitle">
                        Danh sách tài khoản học viên và quản trị. Có thể xem, khóa hoặc phân quyền.
                    </p>
                </div>
                <a href="/admin/users/create" class="btn-admin-primary">
                    <span>+ Thêm người dùng</span>
                </a>
            </div>

            <div class="filter-bar">
                <div class="filter-group">
                    <label>Vai trò</label>
                    <select class="filter-select">
                        <option value="">Tất cả</option>
                        <option value="Admin">Admin</option>
                        <option value="User">User</option>
                    </select>
                </div>
                <div class="filter-group filter-search">
                    <label>Tìm kiếm</label>
                    <div class="search-input-wrapper">
                        <input type="text" class="search-input" placeholder="Tìm theo tên, email, username..." />
                        <button class="search-btn">Tìm</button>
                    </div>
                </div>
            </div>

            <div class="admin-table-wrapper">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>SĐT</th>
                            <th>Địa chỉ</th>
                            <th>Vai trò</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var u in Model)
                            {
                                <tr>
                                    <td>@u.UserId</td>
                                    <td>
                                        <div class="table-main-text">@u.FullName</div>
                                        <div class="table-sub-text">@u.Username</div>
                                    </td>
                                    <td>@u.Email</td>
                                    <td>@u.NumberPhone</td>
                                    <td>@u.Address</td>
                                    <td>
                                        <span class="badge-role">
                                            @(u.Role != null ? u.Role.RoleName : "User")
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="table-actions">
                                            <a href="/admin/users/details/@u.UserId" class="link-action">Xem</a>
                                            <span class="divider">|</span>
                                            <a href="/admin/users/edit/@u.UserId" class="link-action">Sửa</a>
                                            <span class="divider">|</span>
                                            <a href="/admin/users/delete/@u.UserId" class="link-action text-danger">Xóa</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    Chưa có người dùng nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </main>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/admin-dashboard.js"></script>
}
