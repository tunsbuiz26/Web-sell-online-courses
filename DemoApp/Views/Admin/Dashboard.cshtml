@{
    ViewData["Title"] = "Dashboard - Quản trị hệ thống";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-dashboard.css" />
}

<div class="admin-wrapper">
    <!-- Admin Header -->
    <header class="admin-header">
        <div class="header-container">
            <div class="header-left">
                <div class="logo">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                        <path d="M2 17l10 5 10-5"></path>
                        <path d="M2 12l10 5 10-5"></path>
                    </svg>
                    <span class="logo-text">TTNK Admin</span>
                </div>
            </div>

            <!-- Thêm phần giữa header -->
            <div class="header-center">
                <h1 class="header-title">Chào mừng đến với Trang Quản Trị</h1>
                <p class="header-subtitle">Hệ thống quản lý khóa học TTNK</p>
            </div>

            <div class="header-right">
                <button class="header-btn notification-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                        <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
                    </svg>
                    <span class="notification-badge">5</span>
                </button>
                <div class="admin-profile">
                    <img src="~/images/admin-avatar.jpg" alt="Admin" class="profile-avatar" />
                    <div class="profile-info">
                        <span class="profile-name">Admin</span>
                        <span class="profile-role">Quản trị viên</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Sidebar -->
    <aside class="admin-sidebar" id="adminSidebar">
        <div class="sidebar-header">
            <div class="sidebar-header-top">
                <div class="header-title-group">
                    <h2 class="sidebar-title">Admin Panel</h2>
                    <p class="sidebar-subtitle">TTNK Management</p>
                </div>
                <button class="sidebar-toggle" id="sidebarToggle">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                </button>
            </div>
        </div>

        <nav class="sidebar-nav">
            <a href="/admin/dashboard" class="nav-item active">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                <span>Dashboard</span>
            </a>
            <a href="/admin/courses" class="nav-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                    <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                </svg>
                <span>Quản lý khóa học</span>
            </a>

            <a href="/admin/users" class="nav-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                <span>Quản lý người dùng</span>
            </a>

            <a href="/admin/orders" class="nav-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="9" cy="21" r="1"></circle>
                    <circle cx="20" cy="21" r="1"></circle>
                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                </svg>
                <span>Đơn hàng</span>
                <span class="badge">12</span>
            </a>

            <a href="/admin/revenue" class="nav-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="1" x2="12" y2="23"></line>
                    <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                </svg>
                <span>Doanh thu</span>
            </a>

            <a href="/admin/reviews" class="nav-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                </svg>
                <span>Đánh giá</span>
            </a>

            <a href="/admin/settings" class="nav-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="3"></circle>
                    <path d="M12 1v6m0 6v6m-7-7h6m6 0h6"></path>
                </svg>
                <span>Cài đặt</span>
            </a>
        </nav>

        <div class="sidebar-footer">
            <button class="sidebar-toggle" id="sidebarToggle">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                <span>Thu gọn</span>
            </button>
            <a href="/Home/Index" class="back-to-site">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                <span>Về trang chủ</span>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="admin-main" id="adminMain">
        <!-- Content Area -->
        <div class="admin-content">
            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card blue">
                    <div class="stat-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">5,234</h3>
                        <p class="stat-label">Tổng học viên</p>
                        <span class="stat-change positive">+12.5%</span>
                    </div>
                </div>

                <div class="stat-card green">
                    <div class="stat-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                            <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                        </svg>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">48</h3>
                        <p class="stat-label">Khóa học</p>
                        <span class="stat-change positive">+3 mới</span>
                    </div>
                </div>

                <div class="stat-card orange">
                    <div class="stat-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="12" y1="1" x2="12" y2="23"></line>
                            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                        </svg>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">1.2 tỷ</h3>
                        <p class="stat-label">Doanh thu tháng</p>
                        <span class="stat-change positive">+18.2%</span>
                    </div>
                </div>

                <div class="stat-card purple">
                    <div class="stat-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="9" cy="21" r="1"></circle>
                            <circle cx="20" cy="21" r="1"></circle>
                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                        </svg>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-value">892</h3>
                        <p class="stat-label">Đơn hàng</p>
                        <span class="stat-change positive">+24 hôm nay</span>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="charts-section">
                <!-- Biểu đồ doanh thu - LUÔN nằm bên trái -->
                <div class="chart-card">
                    <div class="card-header">
                        <h3 class="card-title">Doanh thu theo tháng</h3>
                        <select class="year-select">
                            <option>2024</option>
                            <option>2023</option>
                        </select>
                    </div>
                    <div class="chart-container">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>

                <!-- Top khóa học - LUÔN nằm bên phải -->
                <div class="chart-card">
                    <div class="card-header">
                        <h3 class="card-title">Top khóa học</h3>
                    </div>
                    <div class="top-courses">
                        <div class="course-item">
                            <div class="course-rank">1</div>
                            <div class="course-info">
                                <h4>Lập trình Front-End</h4>
                                <p>1,234 học viên</p>
                            </div>
                            <div class="course-revenue">5.8 tr</div>
                        </div>
                        <div class="course-item">
                            <div class="course-rank">2</div>
                            <div class="course-info">
                                <h4>CTDL & Giải thuật</h4>
                                <p>856 học viên</p>
                            </div>
                            <div class="course-revenue">4.5 tr</div>
                        </div>
                        <div class="course-item">
                            <div class="course-rank">3</div>
                            <div class="course-info">
                                <h4>Java & SQL</h4>
                                <p>678 học viên</p>
                            </div>
                            <div class="course-revenue">3.8 tr</div>
                        </div>
                        <div class="course-item">
                            <div class="course-rank">4</div>
                            <div class="course-info">
                                <h4>Python cơ bản</h4>
                                <p>543 học viên</p>
                            </div>
                            <div class="course-revenue">2.9 tr</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="activity-section">
                <div class="section-header">
                    <h3 class="section-title">Hoạt động gần đây</h3>
                    <a href="/admin/activity" class="view-all-link">Xem tất cả →</a>
                </div>
                <div class="activity-list">
                    <div class="activity-item">
                        <div class="activity-icon new-user">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="8.5" cy="7" r="4"></circle>
                                <line x1="20" y1="8" x2="20" y2="14"></line>
                                <line x1="23" y1="11" x2="17" y2="11"></line>
                            </svg>
                        </div>
                        <div class="activity-content">
                            <p class="activity-text"><strong>Nguyễn Văn A</strong> đã đăng ký tài khoản mới</p>
                            <span class="activity-time">5 phút trước</span>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon new-order">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="9" cy="21" r="1"></circle>
                                <circle cx="20" cy="21" r="1"></circle>
                                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                            </svg>
                        </div>
                        <div class="activity-content">
                            <p class="activity-text"><strong>Trần Thị B</strong> đã mua khóa học <em>Lập trình Front-End</em></p>
                            <span class="activity-time">12 phút trước</span>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon review">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                            </svg>
                        </div>
                        <div class="activity-content">
                            <p class="activity-text"><strong>Lê Văn C</strong> đã đánh giá 5 sao khóa học <em>CTDL & Giải thuật</em></p>
                            <span class="activity-time">1 giờ trước</span>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon new-course">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                                <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                            </svg>
                        </div>
                        <div class="activity-content">
                            <p class="activity-text">Khóa học mới <strong>ReactJS Advanced</strong> đã được xuất bản</p>
                            <span class="activity-time">2 giờ trước</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="quick-actions">
                <h3 class="section-title">Thao tác nhanh</h3>
                <div class="actions-grid">
                    <a href="/admin/courses/create" class="action-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                        <span>Thêm khóa học</span>
                    </a>
                    <a href="/admin/users/create" class="action-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="8.5" cy="7" r="4"></circle>
                            <line x1="20" y1="8" x2="20" y2="14"></line>
                            <line x1="23" y1="11" x2="17" y2="11"></line>
                        </svg>
                        <span>Thêm người dùng</span>
                    </a>
                    <a href="/admin/promotions/create" class="action-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                            <line x1="7" y1="7" x2="7.01" y2="7"></line>
                        </svg>
                        <span>Tạo khuyến mãi</span>
                    </a>
                    <a href="/admin/reports" class="action-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="18" y1="20" x2="18" y2="10"></line>
                            <line x1="12" y1="20" x2="12" y2="4"></line>
                            <line x1="6" y1="20" x2="6" y2="14"></line>
                        </svg>
                        <span>Xem báo cáo</span>
                    </a>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/admin-dashboard.js"></script>
}