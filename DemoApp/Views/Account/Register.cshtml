@model DemoApp.ViewModels.RegisterViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Đăng ký";
}
@section Styles {
    <link rel="stylesheet" href="~/css/register.css" />
}
@section Scripts {
    <script src="~/js/register.js"></script>
}


<div class="register-container">
    <div class="register-header">
        <h1>Đăng ký trở thành SMEMBER</h1>
        <div class="mascot-image">
            <img src="~/images/smember-mascot.png" alt="SMEMBER Mascot" />
        </div>
        <p class="register-subtitle">Đăng ký bằng tài khoản mạng xã hội</p>
    </div>

    <!-- Nút đăng ký bằng mạng xã hội -->
    <div class="social-buttons">
        <button type="button" class="social-btn">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M19.6 10.227c0-.709-.064-1.39-.182-2.045H10v3.868h5.382a4.6 4.6 0 01-1.996 3.018v2.51h3.232c1.891-1.742 2.982-4.305 2.982-7.35z" fill="#4285F4" />
                <path d="M10 20c2.7 0 4.964-.895 6.618-2.423l-3.232-2.509c-.895.6-2.04.955-3.386.955-2.605 0-4.81-1.76-5.595-4.123H1.064v2.59A9.996 9.996 0 0010 20z" fill="#34A853" />
                <path d="M4.405 11.9c-.2-.6-.314-1.24-.314-1.9 0-.66.114-1.3.314-1.9V5.51H1.064A9.996 9.996 0 000 10c0 1.614.386 3.14 1.064 4.49l3.34-2.59z" fill="#FBBC05" />
                <path d="M10 3.977c1.468 0 2.786.505 3.823 1.496l2.868-2.868C14.959.99 12.695 0 10 0 6.09 0 2.71 2.24 1.064 5.51l3.34 2.59C5.19 5.737 7.395 3.977 10 3.977z" fill="#EA4335" />
            </svg>
            Google
        </button>

        <button type="button" class="social-btn">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M10 0C4.477 0 0 4.477 0 10c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V10h2.54V7.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V10h2.773l-.443 2.89h-2.33v6.988C16.343 19.128 20 14.991 20 10c0-5.523-4.477-10-10-10z" fill="#1877F2" />
            </svg>
            Zalo
        </button>
    </div>

    <div class="divider">Hoặc điền thông tin sau</div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-message">
            <svg class="error-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <div>
                <strong>Đăng ký thất bại.</strong><br>
                <div asp-validation-summary="ModelOnly" class="error-text"></div>
            </div>
        </div>
    }

    <form asp-action="Register" method="post">
        @Html.AntiForgeryToken()

        <h2 class="section-title">Thông tin cá nhân</h2>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="FullName" class="form-label">Họ và tên</label>
                <input asp-for="FullName" class="form-input" placeholder="Nhập họ và tên" />
                <span asp-validation-for="FullName" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="form-label">Địa chỉ</label>
                <input asp-for="Address" class="form-input" placeholder="Nhập địa chỉ của bạn" />
                <span asp-validation-for="Address" class="field-validation-error"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-input" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">Email <span class="optional">(không bắt buộc)</span></label>
                <input asp-for="Email" type="email" class="form-input" placeholder="Nhập email" />
                <span asp-validation-for="Email" class="field-validation-error"></span>
                <div class="checkbox-group small-checkbox">
                    <input type="checkbox" asp-for="ReceivePromotion" class="checkbox" />
                    <label asp-for="ReceivePromotion" class="checkbox-label">Hóa đơn VAT khi mua hàng sẽ được gửi qua email này</label>
                </div>
            </div>
        </div>

        <h2 class="section-title">Tạo mật khẩu</h2>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <div class="password-input-wrapper">
                    <input asp-for="Password" type="password" class="form-input" placeholder="Nhập mật khẩu của bạn" />
                    <button type="button" class="toggle-password">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </button>
                </div>
                <span asp-validation-for="Password" class="field-validation-error"></span>
                <p class="input-hint">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="16" x2="12" y2="12"></line>
                        <line x1="12" y1="8" x2="12.01" y2="8"></line>
                    </svg>
                    Mật khẩu tối thiểu 6 ký tự, có ít nhất 1 chữ số và 1 số
                </p>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Nhập lại mật khẩu</label>
                <div class="password-input-wrapper">
                    <input asp-for="ConfirmPassword" type="password" class="form-input" placeholder="Nhập lại mật khẩu của bạn" />
                    <button type="button" class="toggle-password">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
            </div>
        </div>

        <!-- ✅ Thêm checkbox Đồng ý điều khoản -->
        <div class="terms-checkbox-group">
            <label class="checkbox-label">
                <input asp-for="AcceptTerms" type="checkbox" class="checkbox" />
                <span>
                    Bằng việc Đăng ký, bạn đã đọc và đồng ý với
                    <a href="#" class="link">Điều khoản sử dụng</a> và
                    <a href="#" class="link">Chính sách bảo mật của CellphoneS</a>.
                </span>
            </label>
            <span asp-validation-for="AcceptTerms" class="field-validation-error"></span>
        </div>

        <div class="form-actions">
            <a href="/login" class="btn-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                Quay lại đăng nhập
            </a>
            <button type="submit" class="btn-primary">Hoàn tất đăng ký</button>
        </div>
    </form>
</div>

<div class="footer-links">
    <a href="#">Help</a>
    <a href="#">Privacy</a>
    <a href="#">Terms</a>
</div>
