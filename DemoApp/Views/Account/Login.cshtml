@model DemoApp.ViewModels.LoginViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Log in";
}
@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
<div class="login-page-wrapper">
    

    <!-- Container chính chứa cả 2 phần: Quảng cáo + Form đăng nhập -->
    <div class="wrapper">
    <div class="main-content-wrapper">
        <!-- Phần quảng cáo bên trái -->
        <div class="promo-section">
            <div class="promo-header">
                <span class="member-badge">Code your dream – Viết nên tương lai của chính bạn!</span>
                <span class="member-badge">Khóa học lập trình cho người muốn đi xa</span>
            </div>

            <div class="promo-content">
                <h2 class="promo-title">
                    Tham gia cộng đồng học lập trình <span class="highlight">TTHKCODE</span>
                </h2>
                <p class="promo-subtitle">Nhận ngay những ưu đãi hấp dẫn dành riêng cho học viên mới</p>

                <div class="benefits-box">
                    <div class="benefit-item">
                        <span class="gift-icon">🎁</span>
                        <p><strong>Giảm đến 40%</strong> cho khóa học lập trình bất kỳ</p>
                    </div>

                    <div class="benefit-item">
                        <span class="gift-icon">🎁</span>
                        <p><strong>Tặng khóa học nền tảng miễn phí</strong> (HTML/CSS hoặc Java cơ bản)</p>
                    </div>

                    <div class="benefit-item">
                        <span class="gift-icon">🎁</span>
                        <p><strong>Mentor hỗ trợ 1:1</strong> trong suốt quá trình học</p>
                    </div>

                    <div class="benefit-item">
                        <span class="gift-icon">🎁</span>
                        <p>Cam kết <strong>giải đáp trong 24h</strong> từ đội ngũ chuyên gia</p>
                    </div>

                    <div class="benefit-item">
                        <span class="gift-icon">🎁</span>
                        <p>Thực hành dự án thực tế <strong>từ 3–5 project</strong></p>
                    </div>

                    <div class="benefit-item">
                        <span class="gift-icon">🎁</span>
                        <p><strong>Tư vấn lộ trình nghề nghiệp</strong> & hỗ trợ CV xin việc</p>
                    </div>
                </div>
            </div>

        </div>

        <!-- Phần form đăng nhập bên phải -->
        <div  class="login-container">
            <div class="login-header">
                <h1 >Đăng nhập SMEMBER</h1>
                
            </div>

                @if (Context.Request.Method == "POST" && ViewData.ModelState.ErrorCount > 0)
                {
                <div class="error-message">
                    <svg class="error-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                    <div>
                        <strong>Login failed.</strong><br>
                        <div asp-validation-summary="ModelOnly" class="error-text"></div>
                    </div>
                </div>
            }

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="form-group">
                        <label asp-for="@Model.Username" class="form-label">Tên đăng nhập</label>
                        <input asp-for="@Model.Username" class="form-input" placeholder="Nhập tên đăng nhập" autocomplete="username" />
                    <span asp-validation-for="@Model.Username" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                        <label asp-for="@Model.Password" class="form-label">Mật khẩu</label>
                        <input asp-for="@Model.Password" type="password" class="form-input" placeholder="Nhập mật khẩu của bạn" autocomplete="current-password" />
                    <span asp-validation-for="@Model.Password" class="field-validation-error"></span>
                </div>

                <button type="submit" class="btn-primary">Đăng nhập</button>

                <div class="text-center forgot-password">
                    <a href="#" class="link">Quên mật khẩu?</a>
                </div>
            </form>

            <div class="divider">Hoặc đăng nhập bằng</div>

            <div class="social-buttons">
                <button type="button" class="social-btn">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <path d="M19.6 10.227c0-.709-.064-1.39-.182-2.045H10v3.868h5.382a4.6 4.6 0 01-1.996 3.018v2.51h3.232c1.891-1.742 2.982-4.305 2.982-7.35z" fill="#4285F4" />
                        <path d="M10 20c2.7 0 4.964-.895 6.618-2.423l-3.232-2.509c-.895.6-2.04.955-3.386.955-2.605 0-4.81-1.76-5.595-4.123H1.064v2.59A9.996 9.996 0 0010 20z" fill="#34A853" />
                        <path d="M4.405 11.9c-.2-.6-.314-1.24-.314-1.9 0-.66.114-1.3.314-1.9V5.51H1.064A9.996 9.996 0 000 10c0 1.614.386 3.14 1.064 4.49l3.34-2.59z" fill="#FBBC05" />
                        <path d="M10 3.977c1.468 0 2.786.505 3.823 1.496l2.868-2.868C14.959.99 12.695 0 10 0 6.09 0 2.71 2.24 1.064 5.51l3.34 2.59C5.19 5.737 7.395 3.977 10 3.977z" fill="#EA4335" />
                    </svg>
                    Google
                </button>

                <button type="button" class="social-btn">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <path d="M10 0C4.477 0 0 4.477 0 10c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V10h2.54V7.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V10h2.773l-.443 2.89h-2.33v6.988C16.343 19.128 20 14.991 20 10c0-5.523-4.477-10-10-10z" fill="#1877F2" />
                    </svg>
                    Zalo
                </button>
            </div>

            <div class="footer-text text-center">
                Bạn chưa có tài khoản? <a href="#" class="link">Đăng ký ngay</a>
            </div>

            <div class="additional-links">
                Mua sắm, sửa chữa tại<br>
                <a href="#">cellphones.com.vn</a> và <a href="#">dienthỏaivui.com.vn</a>
            </div>
        </div>
    </div>
    </div>
    <div class="footer-links"> 
         <a href="#">TTHKCODE</a> 
        <a href="#">Liên hệ hỗ trợ : 0382989623</a> 
         
     </div>
   
</div>