<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 28Tech</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/header.css" />

    <style>
        :root {
            --header-height: 70px;
            --gradient-start: #667eea;
            --gradient-end: #764ba2;
            --header-text-color: #ffffff;
            --header-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @if (!Context.Request.Path.StartsWithSegments("/admin"))
    {
    <!-- Header Navigation với gradient -->
    <header class="main-header">
        <div class="header-container">
            <!-- Logo -->
            <a href="/" class="logo">
                <span class="logo-text">28Tech</span>
            </a>

            <!-- Navigation Menu -->
            <nav class="nav-menu">
                <a href="/" class="nav-link active">Trang Chủ</a>
                <a href="/courses/zoom" class="nav-link">Khóa Học Zoom</a>
                <a href="/courses/video" class="nav-link">Khóa Học Video</a>
                <a href="/blog" class="nav-link">Blog</a>
                <a href="/feedback" class="nav-link">Feedback</a>
                <a href="/tutorial" class="nav-link">Tutorial</a>
                <a href="/practice" class="nav-link">Web Chấm Bài</a>
                
            </nav>

            <!-- Right Actions -->
            <div class="header-actions">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-menu">
                        <button class="user-button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                            <span>@User.Identity.Name</span>
                        </button>
                        <div class="dropdown-menu">
                            <a href="/profile" class="dropdown-item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                                Tài khoản của tôi
                            </a>
                            <a href="/my-courses" class="dropdown-item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                                    <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                                </svg>
                                Khóa học của tôi
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="/account/logout" class="dropdown-item logout">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                                    <polyline points="16 17 21 12 16 7"></polyline>
                                    <line x1="21" y1="12" x2="9" y2="12"></line>
                                </svg>
                                Đăng xuất
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="auth-buttons">
                        <a href="/account/login" class="btn-login">Đăng nhập</a>
                        <a href="/account/register" class="btn-register">Đăng ký</a>
                    </div>
                }
            </div>

            <!-- Mobile Menu Toggle -->
            <button class="mobile-menu-toggle" aria-label="Toggle menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </header>
    }
   

    <!-- Mobile Menu -->
    <div class="mobile-menu">
        <nav class="mobile-nav">
            <a href="/" class="mobile-nav-link active">Trang Chủ</a>
            <a href="/courses/zoom" class="mobile-nav-link">Khóa Học Zoom</a>
            <a href="/courses/video" class="mobile-nav-link">Khóa Học Video</a>
            <a href="/blog" class="mobile-nav-link">Blog</a>
            <a href="/feedback" class="mobile-nav-link">Feedback</a>
            <a href="/tutorial" class="mobile-nav-link">Tutorial</a>
            <a href="/practice" class="mobile-nav-link">Web Chấm Bài</a>
            
        </nav>
        <div class="mobile-actions">
            @if (User.Identity.IsAuthenticated)
            {
                <a href="/profile" class="btn-mobile">Tài khoản</a>
                <a href="/account/logout" class="btn-mobile-outline">Đăng xuất</a>
            }
            else
            {
                <button class="btn-mobile-outline" id="mobileLoginBtn">Đăng nhập</button>
            }
        </div>
    </div>

 
    <main role="main">
        @RenderBody()
    </main>

    

    <script src="~/js/site.js"></script>
    <script src="~/js/header.js"></script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>